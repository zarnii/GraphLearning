<Page x:Class="GraphApp.View.MainMenuWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:views="clr-namespace:GraphApp.View"
	  xmlns:viewModel="clr-namespace:GraphApp.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuWindow">

    <Grid Background="White">
		<StackPanel>
			<Button 
				Content="Обучение" 
				Margin="0, 150, 0, 0" 
				HorizontalAlignment="Center" 
				Width="100" 
				Height="30"
				Command="{Binding OpenWindow}"
				CommandParameter="{x:Type views:LearnLevelsWindow}"/>
			<Button
				Content="Песочница"
				Margin="0, 20, 0, 0"
				HorizontalAlignment="Center"
				Width="100"
				Height="30"
				Command="{Binding OpenWindow}"
				CommandParameter="{x:Type views:VisualEditorWindow}"/>
		</StackPanel>
    </Grid>
</Page>
